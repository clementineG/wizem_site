{% extends '::base.html.twig' %}

{% block body -%}

    <h1 class="center-align">Dashboard - {{app.user.username}}</h1>



	<div class="row">
		<div class="col s12 m6">
			<div class="card">
				<div class="card-content">
					<span class="card-title">Mes derniers évènements</span>
					<p>
						{% for event in events %}
							{% if loop.last %}
                                <h5><strong>{{ event.event.typeEvent }}</strong></h5>
                                {% for place in event.event.place %}
                                    {% if place.final == true %}
                                        {{ place.address }}
                                    {% endif %}
                                {% endfor %}<br>
                                {% for date in event.event.date %}
                                    {% if date.final == true %}
                                        {{ date.date | date("d/m/Y") }}
                                    {% endif %}
                                {% endfor %}<br>
                                <hr>
                                {{ event.event.description }}<br>
							{% endif %}
						{% endfor %}
					</p>
				</div>
				<div class="card-action center-align">
				    <a class="waves-effect waves-light btn center-align" href="{{ path('wizem_event_event') }}">
				        Voir tous mes évènements
				    </a>
				</div>
			</div>
		</div>
		<div class="col s12 m6">
			<div class="card">
				<div class="card-content">
					<span class="card-title">Mes derniers amis</span>
					<p>

					</p>
				</div>
				<div class="card-action center-align">
				    <a class="waves-effect waves-light btn center-align" href="{{ path('wizem_event_event') }}">
				        Mes amis
				    </a>
				</div>
			</div>
		</div>
	</div>


    


{% endblock %}